{% extends 'main.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}

    <main>
        <section class="container px-2 mt-5">
            <div class="row justify-content-md-center">
                <h1>Product</h1>

                <table class="table">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ product.id }}</td>
                    </tr>
                    <tr>
                        <th>Sku</th>
                        <td>{{ product.sku }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ product.name }}</td>
                    </tr>
                    <tr>
                        <th>Marque</th>
                        <td>{{ product.marque }}</td>
                    </tr>
                    <tr>
                        <th>Supplier</th>
                        <td>{{ product.supplier }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ product.description }}</td>
                    </tr>
                    <tr>
                        <th>Unit_price</th>
                        <td>{{ product.unitPrice }}</td>
                    </tr>
                    <tr>
                        <th>Unit_in_stock</th>
                        <td>{{ product.unitInStock }}</td>
                    </tr>
                    <tr>
                        <th>Sell_price</th>
                        <td>{{ product.sellPrice }}</td>
                    </tr>
                    <tr>
                        <th>Supplier_price</th>
                        <td>{{ product.supplierPrice }}</td>
                    </tr>
                    <tr>
                        <th>Created_at</th>
                        <td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Modified_at</th>
                        <td>{{ product.modifiedAt ? product.modifiedAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    </tbody>
                </table>

                <a href="{{ path('app_product_index') }}">back to list</a>

                <a href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>

                {{ include('product/_delete_form.html.twig') }}
            </div>
        </section>
    </main>

{% endblock %}
