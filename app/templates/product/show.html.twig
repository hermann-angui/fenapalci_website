{% extends 'main.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Product_sku</th>
                <td>{{ product.productSku }}</td>
            </tr>
            <tr>
                <th>Product_name</th>
                <td>{{ product.productName }}</td>
            </tr>
            <tr>
                <th>Product_supplier</th>
                <td>{{ product.productSupplier }}</td>
            </tr>
            <tr>
                <th>Product_description</th>
                <td>{{ product.productDescription }}</td>
            </tr>
            <tr>
                <th>Product_unit_price</th>
                <td>{{ product.productUnitPrice }}</td>
            </tr>
            <tr>
                <th>Product_unit_in_stock</th>
                <td>{{ product.productUnitInStock }}</td>
            </tr>
            <tr>
                <th>Product_sell_price</th>
                <td>{{ product.productSellPrice }}</td>
            </tr>
            <tr>
                <th>Product_supplier_price</th>
                <td>{{ product.productSupplierPrice }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Modified_at</th>
                <td>{{ product.modifiedAt ? product.modifiedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Product_pictures</th>
                <td>{{ product.productPictures ? product.productPictures|json_encode : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_product_index') }}">back to list</a>

    <a href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
