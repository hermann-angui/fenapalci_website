{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}
{% block stylesheet %}
    {{ parent() }}
    <style>
    </style>
{% endblock %}
{% block body %}
    <!-- **************** MAIN CONTENT START **************** -->
    <main>

        <!-- =======================
        Page Banner START -->
        <section class="py-0 bg-light align-items-center d-flex h-200px rounded-0">
            <!-- Main banner background image -->
            <div class="container">
                <div class="row">
                    <div class="col-12 text-center">
                        <!-- Title -->
                        <h3 class="text-dark">Enregistrement entreprise</h3>
                        <p class="text-dark mb-0">En tant que membre, vous pouvez déclarer votre entreprise</p>
                    </div>
                </div>
            </div>
        </section>
        <!-- =======================
        Page Banner END -->

        <!-- =======================
        Steps START -->
        <section>
            <div class="container">
                <div class="row">
                    <div class="col-md-8 mx-auto text-center">
                        <!-- Content -->
                        <p class="text-center">Les déclarations d'une entreprise et ses employés comme membre de la FENAPALCI ne seront pris en compte seulement après paiement de frais d'inscription de ceux-ci.</p>
                    </div>
                </div>

                <div class="card bg-transparent border rounded-3 mb-5">
                    <div id="stepper" class="bs-stepper stepper-outline">
                        <!-- Card header -->
                        <div class="card-header bg-light border-bottom px-lg-5">
                            <!-- Step Buttons START -->
                            <div class="bs-stepper-header" role="tablist">
                                <!-- Step 1 -->
                                <div class="step" data-target="#step-1">
                                    <div class="d-grid text-center align-items-center">
                                        <button type="button" class="btn btn-link step-trigger mb-0" role="tab" id="steppertrigger1" aria-controls="step-1">
                                            <span class="bs-stepper-circle">1</span>
                                        </button>
                                        <h6 class="bs-stepper-label d-none d-md-block">Information de l'entreprise</h6>
                                    </div>
                                </div>
                                <div class="line"></div>

                                <!-- Step 2 -->
                                <div class="step" data-target="#step-2">
                                    <div class="d-grid text-center align-items-center">
                                        <button type="button" class="btn btn-link step-trigger mb-0" role="tab" id="steppertrigger2" aria-controls="step-2">
                                            <span class="bs-stepper-circle">2</span>
                                        </button>
                                        <h6 class="bs-stepper-label d-none d-md-block">Enregistrement des employés</h6>
                                    </div>
                                </div>
                                <div class="line"></div>

                                <!-- Step 3 -->
                                <div class="step" data-target="#step-3">
                                    <div class="d-grid text-center align-items-center">
                                        <button type="button" class="btn btn-link step-trigger mb-0" role="tab" id="steppertrigger3" aria-controls="step-3">
                                            <span class="bs-stepper-circle">3</span>
                                        </button>
                                        <h6 class="bs-stepper-label d-none d-md-block">Frais d'adhésion</h6>
                                    </div>
                                </div>
                                <div class="line"></div>

                                <!-- Step 4 -->
                                <div class="step" data-target="#step-4">
                                    <div class="d-grid text-center align-items-center">
                                        <button type="button" class="btn btn-link step-trigger mb-0" role="tab" id="steppertrigger4" aria-controls="step-4">
                                            <span class="bs-stepper-circle">4</span>
                                        </button>
                                        <h6 class="bs-stepper-label d-none d-md-block">Confirmation paiement</h6>
                                    </div>
                                </div>
                            </div>
                            <!-- Step Buttons END -->
                        </div>

                        <!-- Card body START -->
                        <div class="card-body">
                            <!-- Step content START -->
                            <div class="bs-stepper-content">
                                <form onsubmit="return false">

                                    <!-- Step 1 content START -->
                                    <div id="step-1" role="tabpanel" class="content fade" aria-labelledby="steppertrigger1">
                                        <!-- Title -->
                                        <h5 class="d-block border-start border-5 border-orange px-2">Déclaration entreprise</h5>

                                        <hr> <!-- Divider -->

                                        <!-- Basic information START -->
                                        <div class="row g-4">
                                            <!-- Course title -->
                                            <div class="col-12">
                                                <label class="form-label">Nom de l'entreprise</label>
                                                {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Nom de votre établissemnt'}}) }}

                                            </div>

                                            <!-- Course category -->
                                            <div class="col-md-6">
                                                <label class="form-label">Status juridique</label>
                                                {{ form_widget(form.legal_status, {'attr': {'class': 'form-control'}}) }}
                                            </div>

                                            <!-- Course time -->
                                            <div class="col-md-6">
                                                <label class="form-label">Ville</label>
                                                {{ form_widget(form.ville, {'attr': {'class': 'form-control'}}) }}
                                            </div>

                                            <!-- Course time -->
                                            <div class="col-md-6">
                                                <label class="form-label">Commune</label>
                                                {{ form_widget(form.commune, {'attr': {'class': 'form-control'}}) }}
                                            </div>


                                            <!-- Course time -->
                                            <div class="col-md-6">
                                                <label class="form-label">Quartier</label>
                                                {{ form_widget(form.quartier, {'attr': {'class': 'form-control'}}) }}
                                            </div>

                                            <!-- Total lecture -->
                                            <div class="col-md-6">
                                                <label class="form-label">Date de création</label>
                                                {{ form_widget(form.date_created, {'attr': {'class': 'form-control'}}) }}
                                            </div>

                                            <!-- Course price -->
                                            <div class="col-md-6">
                                                <label class="form-label">Numéro registre de commerce</label>
                                                {{ form_widget(form.registre_commerce, {'attr': {'class': 'form-control'}}) }}
                                            </div>

                                            <div class="col-12">
                                                <label class="form-label">Description entreprise</label>
                                                <textarea class="form-control" rows="2" placeholder="Décrire brièvement votre entreprise"></textarea>
                                            </div>
                                            <!-- Step 1 button -->
                                            <div class="d-flex justify-content-end mt-3">
                                                <button class="btn btn-primary next-btn mb-0">Suivant</button>
                                            </div>
                                        </div>
                                        <!-- Basic information START -->
                                    </div>
                                    <!-- Step 1 content END -->

                                    <!-- Step 2 content START -->
                                    <div id="step-2" role="tabpanel" class="content fade dstepper-block active" aria-labelledby="steppertrigger2">
                                        <!-- Title -->
                                        <h4>Enregistrement employé</h4>

                                        <hr> <!-- Divider -->

                                        <div class="row">
                                            <!-- Add lecture Modal button -->
                                            <div class="d-sm-flex justify-content-sm-between align-items-center mb-3">
                                                <h5 class="mb-2 mb-sm-0"></h5>
                                                <a href="#" class="btn btn-sm btn-primary-soft mb-0" data-bs-toggle="modal" data-bs-target="#addEmployee"><i class="bi bi-plus-circle me-2"></i>Ajouter</a>
                                            </div>

                                            <!-- Edit lecture START -->
                                            <div class="accordion accordion-icon accordion-bg-light" id="accordionExample2">
                                                <!-- Item START -->
                                                <div class="accordion-item mb-3">
                                                    <h6 class="accordion-header font-base" id="heading-1">
                                                        <button class="accordion-button fw-bold rounded d-inline-block collapsed d-block pe-5" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-1" aria-expanded="false" aria-controls="collapse-1">

                                                        </button>
                                                    </h6>

                                                    <div id="collapse-1" class="accordion-collapse collapse show" aria-labelledby="heading-1" data-bs-parent="#accordionExample2">
                                                        <!-- Topic START -->
                                                        <div class="accordion-body mt-3">
                                                            <!-- Video item START -->
                                                            <div class="d-flex justify-content-between align-items-center">
                                                                <div class="position-relative">
                                                                    <a href="#" class="btn btn-danger-soft btn-round btn-sm mb-0 stretched-link position-static"><i class="fas fa-play"></i></a>
                                                                    <span class="ms-2 mb-0 h6 fw-light">Koffi matthias</span>
                                                                </div>
                                                                <!-- Edit and cancel button -->
                                                                <div>
                                                                    <a href="#" class="btn btn-sm btn-success-soft btn-round me-1 mb-1 mb-md-0"><i class="far fa-fw fa-edit"></i></a>
                                                                    <button class="btn btn-sm btn-danger-soft btn-round mb-0"><i class="fas fa-fw fa-times"></i></button>
                                                                </div>
                                                            </div>
                                                            <!-- Divider -->
                                                            <hr>
                                                            <!-- Video item END -->

                                                            <!-- Video item START -->
                                                            <div class="d-flex justify-content-between align-items-center">
                                                                <div class="position-relative">
                                                                    <a href="#" class="btn btn-danger-soft btn-round btn-sm mb-0 stretched-link position-static"><i class="fas fa-play"></i></a>
                                                                    <span class="ms-2 mb-0 h6 fw-light">Abdoul cissé</span>
                                                                </div>
                                                                <!-- Edit and cancel button -->
                                                                <div>
                                                                    <a href="#" class="btn btn-sm btn-success-soft btn-round me-1 mb-1 mb-md-0"><i class="far fa-fw fa-edit"></i></a>
                                                                    <button class="btn btn-sm btn-danger-soft btn-round mb-0"><i class="fas fa-fw fa-times"></i></button>
                                                                </div>
                                                            </div>
                                                            <!-- Divider -->
                                                            <hr>
                                                            <!-- Video item END -->
                                                        </div>
                                                        <!-- Topic END -->
                                                    </div>
                                                </div>
                                                <!-- Item END -->

                                            </div>
                                            <!-- Edit lecture END -->

                                            <!-- Step 3 button -->
                                            <div class="d-flex justify-content-between">
                                                <button class="btn btn-secondary prev-btn mb-0">Précédent</button>
                                                <button class="btn btn-primary next-btn mb-0">Suivant</button>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Step 2 content END -->

                                    <!-- Step 3 content START -->
                                    <div id="step-3" role="tabpanel" class="content fade" aria-labelledby="steppertrigger3">
                                        <!-- Title -->
                                        <h4>Frais d'adhésion</h4>

                                        <hr> <!-- Divider -->

                                        <div class="row">

                                            <!-- Step 3 button -->
                                            <div class="d-flex justify-content-between">
                                                <button class="btn btn-secondary prev-btn mb-0">Précédent</button>
                                                <button class="btn btn-primary next-btn mb-0">Suivant</button>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Step 3 content END -->

                                    <!-- Step 4 content START -->
                                    <div id="step-4" role="tabpanel" class="content fade" aria-labelledby="steppertrigger4">
                                        <!-- Title -->
                                        <h4>Additional information</h4>

                                        <hr> <!-- Divider -->

                                        <div class="row g-4">

                                            <!-- Edit faq START -->
                                            <div class="col-12">
                                            </div>
                                            <!-- Edit faq END -->

                                            <!-- Tags START -->
                                            <div class="col-12">

                                            </div>
                                            <!-- Tags START -->

                                            <!-- Reviewer START -->
                                            <div class="col-12">

                                            </div>
                                            <!-- Reviewer START -->

                                            <!-- Step 4 button -->
                                            <div class="d-md-flex justify-content-between align-items-start mt-4">
                                                <button class="btn btn-secondary prev-btn mb-2 mb-md-0">Précédent</button>
                                                <button class="btn btn-light me-auto ms-md-2 mb-2 mb-md-0">Suivant</button>
                                                <div class="text-md-end">
                                                    <a href="#" class="btn btn-success mb-2 mb-sm-0">Enregistrer</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Step 4 content END -->

                                </form>
                            </div>
                        </div>
                        <!-- Card body END -->
                    </div>
                </div>
            </div>
        </section>
        <!-- ========== Steps END -->

        <div class="modal fade modal-lg" id="addEmployee" tabindex="-1" aria-labelledby="addEmployeeLabel" style="display: none;" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header bg-dark">
                        <h5 class="modal-title text-white" id="addTopicLabel">Enregister employé</h5>
                        <button type="button" class="btn btn-sm btn-light mb-0" data-bs-dismiss="modal" aria-label="Close"><i class="bi bi-x-lg"></i></button>
                    </div>
                    <div class="modal-body">
                        {{ form_start(staffForm) }}
                             {{ form_widget(staffForm) }}
                        {{ form_end(staffForm) }}
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger-soft my-0" data-bs-dismiss="modal">Fermer</button>
                        <button type="button" class="btn btn-success my-0">Enregistrer</button>
                    </div>
                </div>
            </div>
        </div>

    </main>
    <!-- **************** MAIN CONTENT END **************** -->
{% endblock %}

{% block footer %}
{% endblock %}

